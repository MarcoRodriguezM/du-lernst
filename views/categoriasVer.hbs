<div class="wrapper">
  <div class="main">
    <div class="section section-white section-search">
      <div class="container">
        {{!-- Mensajes para el usuario --}}
        {{> showMessages messages}}
        <div class="row">
          <div class="col-md-8 col-12 ml-auto mr-auto text-center">
            <form role="search" class="form-inline search-form">
              <div class="input-group no-border">
                <span class="input-group-addon addon-xtreme no-border" id="basic-addon1"><i
                    class="fa fa-search"></i></span>
                <input type="text" class="form-control input-xtreme no-border" placeholder="Buscar..."
                  aria-describedby="basic-addon1">
              </div>
            </form>
            <h6 class="text-muted">¿Es esto lo que búscas?</h6>
            <div class="row add-row">
              {{#each categorias as |categoria|}}
              <div class="col-md-4 col-sm-4">
                <h5>{{categoria.nombre}}</h5>
                <p>{{categoria.descripcion}}</p>
              </div>
              {{/each}}
            </div>
            <div class="text-missing">
              <h5 class="text-muted">Si no encuentras lo que buscas, puedes cambiar el término de búsqueda. </h5>
            </div>
          </div>
        </div>
        <form action="/crear-categoria" method="get">
  <button type="submit" class="btn btn-success">Agregar categorías</button>
</form>
      </div>
    </div>
  </div>
</div>